*******for loop*******

using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Loops : MonoBehaviour
{
    // Start is called before the first frame update
    void Start()
    {
        for (int i = 0; i <= 10; i++)
        {
            Debug.Log("The value of i is : " + i);
        }

    }

    // Update is called once per frame
    void Update()
    {
        
    }
}

*******while loop********

using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Loops : MonoBehaviour
{
    // Start is called before the first frame update
    void Start()
    {
        /*for int i = 0; i <= 10; i++)
         {
             Debug.Log("The value of i is : " + i);
         }
        */
        int i = 0;
        while (i <= 10) {
            Debug.Log("The value of i is : " + i);
            i++;
        }
    }

    // Update is called once per frame
    void Update()
    {
        
    }
}
