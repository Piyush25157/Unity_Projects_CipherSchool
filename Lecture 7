********else if*******

using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Else_If : MonoBehaviour
{
    public int Age;
    // Start is called before the first frame update
    void Start()
    {
        if(Age < 18)
        {
            Debug.Log("You are a teenager");
        }
       else if (Age >= 18 && Age < 60)
        {
            Debug.Log("You are an adult");
        }
        else
        {
            Debug.Log("You are a senior citizen");
        }
    }


    // Update is called once per frame
    void Update()
    {
        
    }
}


*******Switch Case*******


using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Else_If : MonoBehaviour
{
    public int score;
    // Start is called before the first frame update
    void Start()
    {
        switch (score)
        {
            case 10:
                Debug.Log("score is full");
                break;
            case 5:
                Debug.Log("score is half");
                break;
            default:
                Debug.Log("score is not enough");
                break;
        }
    }


    // Update is called once per frame
    void Update()
    {
        
    }
}
